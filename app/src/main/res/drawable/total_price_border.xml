<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle">
            <!-- Set the total_price_border color of your layout here -->

            <stroke android:width="1dp" android:color="#D3D3D3" />
            <solid android:color="#D3D3D3" />

        </shape>
    </item>

    <!-- This is for total_price_border bottom but
    you can change this according to your need -->
    <item android:top="2dp" >
        <shape
            android:shape="rectangle">
            <!-- Set the background color of your layout here -->
            <stroke android:width="1dp" android:color="#FFFFFF" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>